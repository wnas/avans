<li class="result-block {{# result-class }} result-block--{{ result-class }}{{/ result-class }}">
	<a class="result-block__link" href="{{ href }}">
		<div class="result-block__content-container">
			<h3 class="result-block__header">
				{{# name }}
					{{ name }}
				{{/ name }}
				{{# header }}
					{{ header }}
				{{/	 header }}

				{{# location }}
				<span class="result-block__location">
					{{ location }}
				</span>
				<!-- / result block location -->
				{{/ location }}
				{{# header-extra }}
				<span class="result-block__header-extra">
					{{ header-extra }}
				</span>
				<!-- / result block location -->
				{{/ header-extra }}

			</h3>


			<p class="result-block__title">
				{{ title }}
			</p>
			<div class="result-block__content{{# result-class }} result-block__content--{{ result-class }}{{/ result-class }}">
				<p>{{{ content }}}</p>
			</div>
			<!-- / result block content -->
			{{# alert }}
				<div class="result-block__alert">
					<p><strong class="alert__header">Let op:</strong><span class="alert__text">{{ content }}</span></p>
				</div>
				<!-- / result block alert -->
			{{/ alert }}
			{{# readmore }}
				<div class="result-block__link">
					{{ text }}
				</div>
				<!-- / result block link -->
			{{/ readmore }}

		</div>
		<div class="result-block__image-container {{# result-class }} result-block__image-container--{{ result-class }}{{/ result-class }}">
			<div class="result-block__image-hover-overlay">
			<img class="result-block__image" src="{{ src }}"  />
		</div>
		</div>
		<!-- / result block image -->
	</a>
</li>
<!-- / result block -->
