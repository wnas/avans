<div class="widget widget--sidebar widget--{{type}}">
	<h4 class="widget__header widget__header--{{type}}">{{header}}</h4>
	<div class="widget__content">
		{{# when }}
			<p class="widget__when">
				<time>{{date}}</time>, <time>{{time.start}} - {{time.end}}</time>
			</p>
		{{/ when }}
		{{# call-to-action }}
			<a href="{{href}}" class="{{class}}">{{text}}</a>
		{{/ call-to-action }}
		{{# widget-list }}
			<ul class="widget__list">
				{{# items }}
					<li class="widget__list-item">
						<a class="widget__link widget__list-link" href="{{href}}">{{ text }}</a>
					</li>
				{{/ items }}
			</ul>
		{{/ widget-list }}
		{{# text }}
		<p class="widget__paragraph">{{ text }}</p>
		{{/ text }}
		{{# widget-durability }}

			<span class="durability" title="{{ title }}">{{{ widget-durability}}}</span>
		{{/ widget-durability }}
		{{# widget-link }}
			<a class="widget__link widget__link--solo" href="{{href}}">{{ text }}</a>
		{{/ widget-link }}
	</div>
</div>
